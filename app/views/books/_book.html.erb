  <div class="row">

  <div class="col-md-3">

      <h2>User info</h2>
        <p><%= image_tag user.get_profile_image(100,100) %></p>
      <table>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </table>

      <%= link_to '<i class="fa-solid fa-user-gear"></i>'.html_safe, edit_user_path(user.id), class: "btn btn-outline-secondary" %>

      <h2>New book</h2>
        <%= form_with model: book do |f| %>
          <h4>title</h4>
            <%= f.text_field :title %>
          <h4>body</h4>
            <%= f.text_area :body %>

        <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
