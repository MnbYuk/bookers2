  <div class="col-md-3">
          <% flash.each do |message_type, message| %>
            <%= content_tag :div, message, class: message_type %>
          <% end %>
      <div id ="error_exolanation">
             <% if book.errors.any? %>
          <%= book.errors.count %>errors prohibited this obj from being saved:
            <ul>
              <% book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
        </div>

      <h2>User info</h2>
        <p><%= image_tag user.get_profile_image(100,100) %></p>
      <table>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </table>

      <%= link_to '<i class="fa-solid fa-user-gear"></i>'.html_safe, edit_user_path(user.id), class: "btn btn-outline-secondary" %>

      <h2>New book</h2>
        <%= form_with model: book do |f| %>
          <h4>title</h4>
            <%= f.text_field :title %>
          <h4>body</h4>
            <%= f.text_area :body %>

        <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>
    </div>
