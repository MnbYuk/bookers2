<%= render 'book', user: @user, book: @book %>

<div class="col-md-8 offset-md-1">
  <h1>Book detail</h1>
  <table class="table">
    <tbody>
      <tr>
        <td><span>
          <%= link_to user_path(@user.id) do %>
            <%= image_tag @book_a.user.get_profile_image(100,100) %> <br>
            <%= @user.name %>
          <% end %>
        </span></td>
        <td><span><%= link_to @book_a.title, book_path(@book_a.id) %></span></td>
        <td><span><%= @book_a.body %></span></td>

        <% if @book_a.user == current_user %>
          <td><span><%= link_to "Edit", edit_book_path(@book_a.id) %></span></td>
          <td><span><%= link_to "Destroy", book_path(@book_a.id), method: :delete, "data-confirm" => "Are you sure?" %></span></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>