<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

      <table>
        <tr>
          <th>name</th>
          <th>current_user_name</th>
        </tr>
        <tr>
          <th>introduction</th>
          <th>説明</th>
        </tr>
      </table>
<%= link_to "ユーザー編集のリンク", edit_user_path(:id) %>


      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
        <h4>title</h4>
          <%= f.text_field :title %>
        <h4>body</h4>
          <%= f.text_area :body %>

        <%= f.submit 'Create Book' %>
      <% end %>

    </div>

    <div class="col-md-8">
<table>
    <thead>
        <th>Title</th>
        <th>Book</th>
    </thead>

    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td><span><%= link_to book.title, book_path(book.id)%></span></td>
                <td><span><%= book.body %></span></td>
            </tr>
        <% end %>

    </tbody>

</table>
    </div>
  </div>
</div>