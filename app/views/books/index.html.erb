<%= render 'book', book: @book %>

    <div class="col-md-8">
<table>
    <thead>
        <th></th>
        <th>Title</th>
        <th>Book</th>
    </thead>

    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td><span><%= image_tag 'sample-author1.jpg' %></span></td>
                <td><span><%= link_to book.title, book_path(book.id) %></span></td>
                <td><span><%= book.body %></span></td>
            </tr>
        <% end %>

    </tbody>

</table>
    </div>
  </div>
</div>