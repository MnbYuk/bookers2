
<%= render 'book', user: @user, book: @book %>
<div class="col-md-8">
<table>
    <thead>
        <th></th>
        <th>Title</th>
        <th>Book</th>
    </thead>

    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td><span><%= image_tag book.user.get_profile_image(100,100) %></span></td>
                <td><span><%= link_to book.title, book_path(book.id) %></span></td>
                <td><span><%= book.body %></span></td>
            </tr>
        <% end %>

    </tbody>

    </table>
      </div>
